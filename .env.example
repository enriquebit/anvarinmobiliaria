#--------------------------------------------------------------------
# CodeIgniter 4 Environment Variables
#--------------------------------------------------------------------

# CI Environment
CI_ENVIRONMENT = development

# Base URL
app.baseURL = 'http://localhost/'

# Database Configuration
database.default.hostname = localhost
database.default.database = your_database_name
database.default.username = your_username
database.default.password = your_password
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

# Encryption Key
encryption.key = your_encryption_key_here

# Email Configuration
email.protocol = smtp
email.SMTPHost = your_smtp_host
email.SMTPUser = your_email@domain.com
email.SMTPPass = your_email_password
email.SMTPPort = 465
email.SMTPCrypto = ssl
email.fromEmail = noreply@your-domain.com
email.fromName = 'Your Company Name'

# HubSpot API Configuration
HUBSPOT_ACCESS_TOKEN = your_hubspot_token_here
HUBSPOT_OWNER_ID = your_hubspot_owner_id

# Google Drive OAuth Configuration
GOOGLE_DRIVE_CLIENT_ID = your_google_client_id
GOOGLE_DRIVE_CLIENT_SECRET = your_google_client_secret

# Security
security.tokenRandomize = false
security.tokenName = 'csrf_token_name'
security.headerName = 'X-CSRF-TOKEN'
security.cookieName = 'csrf_cookie_name'
security.expires = 7200
security.regenerate = true
security.redirect = true
security.samesite = 'Lax'

# Session
session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
session.cookieName = 'ci_session'
session.expiration = 7200
session.savePath = null
session.matchIP = false
session.timeToUpdate = 300
session.regenerateDestroy = false

# Logger
logger.threshold = 4

# Toolbar (para desarrollo)
toolbar.collectors.CODEIGNITER_SCREAM_DEPRECATIONS = true